{
  "compilerOptions": {
    "target": "es2019",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "type": "module",
  "include": ["src/**/*.ts"]
}
